pipeline {
    agent {
        docker { image "node:16-alpine" }
         }
    stages {
        stage('Intialize') {
               def dockerHome = tool 'myDocker'
               env.PATH = "${dockerHome}/bin:${env.PATH}"
               }
        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImageTag = "us-east4-docker.pkg.dev/infgprj-gss-n-iacbst-gl-01/jenkins:${BUILD_NUMBER}" // or your desired tag
                    docker.build(dockerImageTag, "-f hello-world-docker/dockerfile .")
                    docker.withRegistry('https://us-east4-docker.pkg.dev', 'your-registry-credentials') {
                        docker.image(dockerImageTag).push()
                    }
                }
            }
        }
    }
}

